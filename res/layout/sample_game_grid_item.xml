<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_selector_5"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="8dp" >

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:marqueeRepeatLimit="marquee_forever"
        android:paddingBottom="1dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="1dp"
        android:shadowColor="#000"
        android:shadowDx="0"
        android:shadowDy="0.6"
        android:shadowRadius="1.2"
        android:singleLine="true"
        android:text="TextView"
        android:textColor="#fff"
        android:textSize="14sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/primaryDark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:contentDescription="@string/label_game_image"
            android:padding="4dp"
            android:src="@drawable/umlc_m1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_sub1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/list_selector_2"
                android:gravity="center"
                android:paddingBottom="1dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="1dp"
                android:shadowColor="#000"
                android:shadowDx="0"
                android:shadowDy="0.4"
                android:shadowRadius="0.8"
                android:singleLine="true"
                android:text="TextView"
                android:textColor="@color/snow"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_sub2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="2dp"
                android:singleLine="true"
                android:text="TextView"
                android:textColor="#eee"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_sub3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="TextView"
                android:textColor="#eee"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
