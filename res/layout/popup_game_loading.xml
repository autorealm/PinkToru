<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<ImageButton
    android:id="@+id/btnGameClose"
    android:layout_width="28dp"
    android:layout_height="28dp"
    android:layout_gravity="center"
    android:background="@null" />

<LinearLayout
    android:id="@+id/pgdLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/itemshape_6"
    android:gravity="center"
    android:minWidth="280dp"
    android:orientation="vertical"
    android:padding="8dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="#30000000"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="4dp" >

        <com.sunteorum.pinktoru.view.FlippingImageView
            xmlns:flip="http://schemas.android.com/apk/res/com.sunteorum.pinktoru"
            android:id="@+id/game_loading_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_android"
            flip:AnimEffect="false"
            flip:Duration="1000"
            flip:Mode="Y" />

        <TextView
            android:id="@+id/txtGameName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="@color/snow"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtGameDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:hint="游戏说明"
        android:linksClickable="true"
        android:minHeight="64dp"
        android:padding="4dp"
        android:scrollbars="none"
        android:shadowColor="#ccc"
        android:shadowDx="0.3"
        android:shadowDy="0.6"
        android:shadowRadius="0.8"
        android:textSize="14sp"
        android:typeface="sans" />

</LinearLayout>
</FrameLayout>