<?xml version="1.0" encoding="utf-8"?>
<com.sunteorum.pinktoru.view.SlideLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/slide_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff002E29"
    android:orientation="vertical" >
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/green_sea" >

        <ImageView
            android:id="@+id/image_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_head"
            android:padding="12dp"
            android:scaleType="fitXY"
            android:src="@drawable/login_icon_account" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_gravity="bottom"
            android:background="@drawable/backgroud_2" >

        </LinearLayout>
        
    </FrameLayout>
                
	<FrameLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" >

		<ScrollView
		    android:layout_width="match_parent"
		    android:layout_height="match_parent" >

		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical" >

		        <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:orientation="vertical" >

		            <Button
		                android:id="@+id/button1"
		                style="@style/MenuButton"
		                android:layout_width="match_parent"
		                android:layout_height="40dp"
		                android:drawableLeft="@drawable/ic_explore_white"
		                android:text="Button" />

		            <View
		                android:layout_width="match_parent"
		                android:layout_height="1px"
		                android:background="#40acacac" />

		            <Button
		                android:id="@+id/button2"
		                style="@style/MenuButton"
		                android:layout_width="match_parent"
		                android:layout_height="40dp"
		                android:drawableLeft="@drawable/ic_explore_white"
		                android:text="Button" />

		            <View
		                android:layout_width="match_parent"
		                android:layout_height="1px"
		                android:background="#40acacac" />

		            <Button
		                android:id="@+id/button3"
		                style="@style/MenuButton"
		                android:layout_width="match_parent"
		                android:layout_height="40dp"
		                android:drawableLeft="@drawable/ic_explore_white"
		                android:text="Button" />

		            <View
		                android:layout_width="match_parent"
		                android:layout_height="1px"
		                android:background="#40acacac" />

		            <Button
		                android:id="@+id/button4"
		                style="@style/MenuButton"
		                android:layout_width="match_parent"
		                android:layout_height="40dp"
		                android:drawableLeft="@drawable/ic_explore_white"
		                android:text="Button" />

		            <View
		                android:layout_width="match_parent"
		                android:layout_height="1px"
		                android:background="#40acacac" />

		            <Button
		                android:id="@+id/button5"
		                style="@style/MenuButton"
		                android:layout_width="match_parent"
		                android:layout_height="40dp"
		                android:drawableLeft="@drawable/ic_explore_white"
		                android:text="Button" />

		            <View
		                android:layout_width="match_parent"
		                android:layout_height="1px"
		                android:background="#40acacac" />

		            <Button
		                android:id="@+id/button6"
		                style="@style/MenuButton"
		                android:layout_width="match_parent"
		                android:layout_height="40dp"
		                android:drawableLeft="@drawable/ic_explore_white"
		                android:text="Button" />
		        </LinearLayout>

		        <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="48dp" >
		        </LinearLayout>

		    </LinearLayout>
		</ScrollView>

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="48dp"
		    android:layout_gravity="bottom"
		    android:background="@drawable/sliding_header_overlay"
		    android:orientation="vertical" >

		</LinearLayout>
        
    </FrameLayout>
    
</com.sunteorum.pinktoru.view.SlideLinearLayout>
