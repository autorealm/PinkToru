<?xml version="1.0" encoding="utf-8"?>
<com.sunteorum.pinktoru.view.SlideLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/slide_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff393939"
    android:orientation="vertical" >
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/green_sea" >

        <ImageView
            android:id="@+id/image_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_head"
            android:padding="12dp"
            android:scaleType="fitXY"
            android:src="@drawable/login_icon_account" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_gravity="bottom"
            android:background="@drawable/backgroud_2" >

        </LinearLayout>
        
    </FrameLayout>
                
	<FrameLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" >

		<ScrollView
		    android:layout_width="match_parent"
		    android:layout_height="match_parent" >

		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:layout_gravity="center"
		        android:orientation="vertical" >
		    </LinearLayout>
		</ScrollView>

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_gravity="top" >

		</LinearLayout>
        
    </FrameLayout>
    
</com.sunteorum.pinktoru.view.SlideLinearLayout>
