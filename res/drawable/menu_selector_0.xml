<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape>
			<gradient
				android:startColor="#404040"
				android:centerColor="#303030"
				android:endColor="#505050"
				android:angle="270"/>
			<stroke
				android:width="2dp"
				android:color="#343434"/>
			<corners
				android:radius="20dp"/>
			<padding
				android:left="10dp"
				android:top="10dp"
				android:right="10dp"
				android:bottom="10dp"/>
		</shape>
	</item>
	<item android:state_focused="true">
		<shape>
			<gradient
				android:startColor="#bec2b7"
				android:endColor="#bec2b7"
				android:angle="270"/>
			<stroke
				android:width="2dp"
				android:color="#dcdcdc"/>
			<corners
				android:radius="20dp"/>
			<padding
				android:left="10dp"
				android:top="10dp"
				android:right="10dp"
				android:bottom="10dp"/>
		</shape>
	</item>
	<item>
		<shape>
			<gradient
				android:startColor="#464646"
	    		android:centerColor="#353535"
	        	android:endColor="#686868"
				android:angle="90"/>
			<stroke
				android:width="2dp"
				android:color="#333"/>
			<corners
				android:radius="20dp"/>
			<padding
				android:left="10dp"
				android:top="10dp"
				android:right="10dp"
				android:bottom="10dp"/>
		</shape>
	</item>
</selector>