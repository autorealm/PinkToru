<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape>
			<gradient
				android:startColor="#0666c5"
				android:endColor="@android:color/white"
				android:angle="270"/>
			<stroke
				android:width="2dp"
				android:color="#aa0666c5"/>
			<corners
				android:radius="20dp"/>
			<padding
				android:left="10dp"
				android:top="10dp"
				android:right="10dp"
				android:bottom="10dp"/>
		</shape>
	</item>
	<item android:state_focused="true">
		<shape>
			<gradient
				android:startColor="#094"
				android:endColor="#094"
				android:angle="270"/>
			<stroke
				android:width="2dp"
				android:color="#dcdcdc"/>
			<corners
				android:radius="20dp"/>
			<padding
				android:left="10dp"
				android:top="10dp"
				android:right="10dp"
				android:bottom="10dp"/>
		</shape>
	</item>
	<item>
		<shape>
			<gradient
				android:startColor="@android:color/transparent"
				android:endColor="#007f91"
				android:angle="270"/>
			<stroke
				android:width="2dp"
				android:color="#aa2dacbf"/>
			<corners
				android:radius="20dp"/>
			<padding
				android:left="10dp"
				android:top="10dp"
				android:right="10dp"
				android:bottom="10dp"/>
		</shape>
	</item>
</selector>